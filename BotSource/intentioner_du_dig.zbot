! concept du = du, dig, de, deres
! concept klog = klog, smart, intelligent, begavet, ikke så dum

! entities (personligt)
{
  > (din|dit|dine|deres) (mor|far|søster|søstre|bror|brødre)  
  > (din|dit|dine|deres) (yndlingsfarve)
}

! pattern (intent = hvordan_går_det, type = spm)
{
  > hvordan går det
  > hvordan har du det
  > har du det godt
  > er du på toppen  
}

! pattern (intent = hvad_hedder_du, type = spm)
{
  > hvad hedder %du
  > hvad er %du navn
  > hvad kaldes %du
}

! pattern (intent = hvad_laver_du, type = spm)
{
  > hvad laver %du
  > hvad arbejder %du med
}

! pattern (intent = hvem_er_du, type = spm)
{
  > hvem er %du
  > hvad er %du for en
  > fortæl om dig selv
}

! pattern (intent = hvor_gammel_er_du, type = spm)
{
  > hvor gammel er %du
  > hvor mange år er %du
}

! pattern (intent = taler_du, type = spm)
{
  > taler %du {sprog}
  > kan %du tale {sprog}
  > snakker %du {sprog}
}

! pattern (intent = hvor_bor_du, type = spm)
{
  > hvor bor %du
  > hvor lever %du
  > hvor kommer %du fra
  > hvor er %du fra
}

! pattern (intent = er_du_sikker, type = spm)
{
  > er du sikker
  > er du sikker på det
  > mener du det
  > emenr du virkelig det
  > er du helt sikker
  > er du bombesikker
}

! pattern (intent = er_du, type = spm)
{
  > er du {emne}
}

! pattern (intent = du_er_fantastisk, type = udsagn)
{
  > du er fantastisk
  > jeg elsker dig
  > hvor er du god
  > du er utrolig
  > du er så sød
  > du er %klog
}
